---
import { urlFor } from '../lib/sanity';
import { formatDate } from '../lib/utils';
import type { Tool } from '../types';
import { Image } from 'astro:assets';

export interface Props {
  tool: Tool;
}

const { tool } = Astro.props;
const imageUrl = tool.mainImage?.image ? urlFor(tool.mainImage.image).width(400).height(250).url() : null;
const authorName = tool.author?.name || 'The Bet Blog Team';
const publishedDate = formatDate(tool.publishedAt);
---

<article class="bg-white dark:bg-gray-900 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700 group">
  <!-- Image -->
  {imageUrl && (
    <div class="aspect-w-16 aspect-h-9 bg-gray-200 dark:bg-gray-700">
      <Image 
        src={imageUrl}
        alt={tool.mainImage?.alt || tool.title}
        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
        width={400}
        height={250}
        loading="lazy"
        format="webp"
      />
    </div>
  )}
  
  <!-- Content -->
  <div class="p-6">
    <!-- Premium Badge -->
    {tool.isPremium && (
      <div class="flex items-center justify-between mb-3">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Premium Tool
        </span>
      </div>
    )}
    
    <!-- Title -->
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 line-clamp-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
      <a href={`/tools/${tool.slug.current}/`} class="hover:underline">
        {tool.title}
      </a>
    </h3>
    
    <!-- Description -->
    {tool.metaDescription && (
      <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
        {tool.metaDescription}
      </p>
    )}
    
    <!-- Features -->
    {tool.features && Array.isArray(tool.features) && tool.features.length > 0 && (
      <div class="mb-4">
        <div class="text-xs text-gray-500 dark:text-gray-400 mb-2">Features:</div>
        <ul class="text-sm text-gray-600 dark:text-gray-300 space-y-1">
          {tool.features.slice(0, 3).map((feature) => (
            <li class="flex items-start space-x-2">
              <svg class="w-3 h-3 text-success-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="line-clamp-1">{feature}</span>
            </li>
          ))}
        </ul>
      </div>
    )}
    
    <!-- Meta Information -->
    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
      <div class="flex items-center space-x-4">
        <!-- Author -->
        <div class="flex items-center space-x-2">
          {tool.author?.image && (
            <Image 
              src={urlFor(tool.author.image).width(24).height(24).url()}
              alt={authorName}
              class="w-6 h-6 rounded-full"
              width={24}
              height={24}
              format="webp"
            />
          )}
          <span>{authorName}</span>
        </div>
        
        <!-- Date -->
        <span>{publishedDate}</span>
      </div>
      
      <!-- Tool Type -->
      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200">
        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Calculator
      </span>
    </div>
    
    <!-- CTA Button -->
    <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
      <a 
        href={`/tools/${tool.slug.current}/`}
        class="inline-flex items-center justify-center w-full px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white text-sm font-medium rounded-md transition-colors group-hover:shadow-md"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Use Tool
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
