---
import { urlFor } from '../lib/sanity';
import { formatDate } from '../lib/utils';
import type { Post } from '../types';
import { Image } from 'astro:assets';

export interface Props {
  post: Post;
  hindiPost?: boolean;
}

const { post, hindiPost = false } = Astro.props;
const imageUrl = post.mainImage?.image ? urlFor(post.mainImage.image).width(400).height(250).url() : null;
const authorName = post.author?.name || 'The Bet Blog Team';
const publishedDate = formatDate(post.publishedAt);
const readingTime = Math.max(1, Math.floor(Math.random() * 8) + 3); // Mock reading time
const postUrl = hindiPost ? `/hi/${post.slug.current}/` : `/${post.slug.current}/`;
---

<article class="bg-white dark:bg-gray-900 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700 group">
  <!-- Image -->
  {imageUrl && (
    <div class="aspect-w-16 aspect-h-9 bg-gray-200 dark:bg-gray-700">
      <Image 
        src={imageUrl}
        alt={post.mainImage?.alt || post.title}
        class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
        width={400}
        height={250}
        loading="lazy"
        format="webp"
      />
    </div>
  )}
  
  <!-- Content -->
  <div class="p-6">
    <!-- Categories -->
    {post.categories && Array.isArray(post.categories) && post.categories.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-3">
        {post.categories.slice(0, 2).map((category) => (
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200">
            {category.title}
          </span>
        ))}
      </div>
    )}
    
    <!-- Title -->
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3 line-clamp-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
      <a href={postUrl} class="hover:underline">
        {post.title}
      </a>
    </h3>
    
    <!-- Description -->
    {post.metaDescription && (
      <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3">
        {post.metaDescription}
      </p>
    )}
    
    <!-- Meta Information -->
    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
      <div class="flex items-center space-x-4">
        <!-- Author -->
        <div class="flex items-center space-x-2">
          {post.author?.image && (
            <Image 
              src={urlFor(post.author.image).width(24).height(24).url()}
              alt={authorName}
              class="w-6 h-6 rounded-full"
              width={24}
              height={24}
              format="webp"
            />
          )}
          <span>{authorName}</span>
        </div>
        
        <!-- Date -->
        <span>{publishedDate}</span>
      </div>
      
      <!-- Reading Time -->
      <span>{readingTime} min read</span>
    </div>
    
    <!-- Key Takeaways Preview -->
    {post.keyTakeaways && Array.isArray(post.keyTakeaways) && post.keyTakeaways.length > 0 && (
      <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
        <div class="text-xs text-gray-500 dark:text-gray-400 mb-2">Key Points:</div>
        <ul class="text-sm text-gray-600 dark:text-gray-300 space-y-1">
          {post.keyTakeaways.slice(0, 2).map((takeaway) => (
            <li class="flex items-start space-x-2">
              <svg class="w-3 h-3 text-primary-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="line-clamp-1">{takeaway}</span>
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>
</article>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
