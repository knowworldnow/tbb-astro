---
import Layout from '../layouts/Layout.astro';
import { generatePageSEO } from '../lib/seo';

const seo = generatePageSEO(
  'About The Bet Blog - Expert Betting Strategies & Free Tools',
  'Meet the team behind The Bet Blog. We\'re professional bettors sharing proven strategies, free calculators, and insider tips to help you win consistently.',
  'https://thebetblog.com',
  '/about-us/'
);
---

<Layout seo={seo}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 text-white py-20">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-yellow-400 to-orange-400 bg-clip-text text-transparent">
        🎯 About The Bet Blog
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gray-100 max-w-3xl mx-auto">
        Your trusted source for comprehensive betting information, providing engaging betting strategies, practical odds analysis, gambling insights, and betting tools that help you make informed decisions.
      </p>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
            🚀 Our Mission
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
            To be your trusted source for comprehensive betting information, providing engaging betting strategies, 
            practical odds analysis, gambling insights, and betting tools that help you make informed decisions.
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
            The Bet Blog is a comprehensive betting platform that brings you the latest and most relevant content 
            across multiple areas of interest. Our diverse team of writers, researchers, and content creators work 
            tirelessly to deliver accurate, engaging, and useful information that keeps you informed and helps you 
            make better betting decisions.
          </p>
        </div>
        <div class="bg-gradient-to-br from-emerald-400 to-blue-600 rounded-2xl p-8 text-white">
          <h3 class="text-2xl font-bold mb-4">🎯 What We Cover</h3>
          <ul class="space-y-3">
            <li class="flex items-start space-x-3">
              <span class="text-yellow-400">🎯</span>
              <span>Betting Strategies - Latest betting strategies, odds analysis, and expert tips</span>
            </li>
            <li class="flex items-start space-x-3">
              <span class="text-yellow-400">🎰</span>
              <span>Casino & Gaming - Comprehensive guides on casino games and responsible gambling</span>
            </li>
            <li class="flex items-start space-x-3">
              <span class="text-yellow-400">📊</span>
              <span>Odds Analysis - In-depth odds analysis and statistical insights</span>
            </li>
            <li class="flex items-start space-x-3">
              <span class="text-yellow-400">💰</span>
              <span>Bankroll Management - Expert advice on managing your betting bankroll</span>
            </li>
            <li class="flex items-start space-x-3">
              <span class="text-yellow-400">🛠️</span>
              <span>Betting Tools - Free online betting calculators and odds converters</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          💎 Our Values
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">What drives us every day</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-6 bg-gradient-to-br from-emerald-50 to-green-100 dark:from-emerald-900/20 dark:to-green-900/20 rounded-xl">
          <div class="text-4xl mb-4">🎯</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Accuracy</h3>
          <p class="text-gray-600 dark:text-gray-300">We prioritize fact-checking and reliable sources to ensure our content is trustworthy and accurate.</p>
        </div>
        
        <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl">
          <div class="text-4xl mb-4">🔬</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Diversity</h3>
          <p class="text-gray-600 dark:text-gray-300">Our content spans multiple interests and topics, ensuring there's something valuable for everyone.</p>
        </div>
        
        <div class="text-center p-6 bg-gradient-to-br from-purple-50 to-pink-100 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl">
          <div class="text-4xl mb-4">🤝</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Responsibility</h3>
          <p class="text-gray-600 dark:text-gray-300">We provide information responsibly, especially on sensitive topics like gambling and legal matters.</p>
        </div>
        
        <div class="text-center p-6 bg-gradient-to-br from-orange-50 to-red-100 dark:from-orange-900/20 dark:to-red-900/20 rounded-xl">
          <div class="text-4xl mb-4">🚀</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Engagement</h3>
          <p class="text-gray-600 dark:text-gray-300">We create content that's not just informative but also engaging and easy to understand.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          👥 Who We Are
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">Our diverse team of writers, researchers, and content creators</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-center">
            <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-purple-600 rounded-full mx-auto mb-4 flex items-center justify-center text-2xl">
              🧮
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Michael Rodriguez</h3>
            <p class="text-emerald-600 font-semibold mb-2">Matched Betting Expert</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Professional matched betting specialist with 8+ years experience. 
              Generated £180K+ in risk-free profits using proven strategies.
            </p>
          </div>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-center">
            <div class="w-20 h-20 bg-gradient-to-br from-green-400 to-blue-600 rounded-full mx-auto mb-4 flex items-center justify-center text-2xl">
              📊
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Sarah Williams</h3>
            <p class="text-blue-600 font-semibold mb-2">Odds Analysis Specialist</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Mathematics PhD with 8 years in professional sports betting. 
              Expert in finding guaranteed profit opportunities and statistical analysis.
            </p>
          </div>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-center">
            <div class="w-20 h-20 bg-gradient-to-br from-purple-400 to-pink-600 rounded-full mx-auto mb-4 flex items-center justify-center text-2xl">
              🎲
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Alex Chen</h3>
            <p class="text-purple-600 font-semibold mb-2">Casino Games Expert</p>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Professional blackjack player and card counting expert. 
              Specializes in advantage play techniques and responsible gambling.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Important Disclaimers -->
  <section class="py-16 bg-yellow-50 dark:bg-yellow-900/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          ⚠️ Important Disclaimers
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3">🎰 Gambling Content</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Casino and gambling content is for entertainment purposes and promotes responsible gambling practices.
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3">⚖️ Legal Information</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Legal information is general in nature and not a substitute for professional legal counsel.
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3">📚 Educational Content</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Betting content is for educational purposes and not personalized betting advice.
          </p>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3">🎮 Gaming Content</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Gaming content promotes responsible gambling and is intended for entertainment purposes.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Join Community Section -->
  <section class="py-16 bg-gradient-to-r from-emerald-500 to-blue-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">
        🎯 Join Our Community
      </h2>
      <p class="text-xl text-gray-100 mb-8 max-w-3xl mx-auto">
        Whether you're looking for the latest betting strategies, odds analysis, gambling tips, or practical betting tools, 
        The Bet Blog has you covered. Join our growing community of readers who rely on us for diverse, quality content 
        across multiple betting topics.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/posts/" class="bg-yellow-400 text-black px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-300 transition-colors">
          📚 Explore Our Content
        </a>
        <a href="/tools/" class="bg-white text-emerald-600 px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors">
          🛠️ Free Betting Tools
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .bg-gradient-to-br {
    background-image: linear-gradient(to bottom right, var(--tw-gradient-stops));
  }
  
  .bg-gradient-to-r {
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
  }
  
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
</style>
