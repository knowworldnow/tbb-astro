---
import Layout from '../layouts/Layout.astro';
import { getPosts, getTools } from '../lib/sanity';

const recentPosts = await getPosts({ limit: 6 });
const recentTools = await getTools({ limit: 6 });

const seo = {
  title: 'Page Not Found | The Bet Blog',
  description: 'We couldnâ€™t find that page. Explore our latest betting posts and free tools.',
  canonical: 'https://thebetblog.com/404/',
};
---

<Layout seo={seo}>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-yellow-400 via-red-500 to-pink-600 text-white py-20">
    <div class="absolute inset-0 bg-black/30"></div>
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="mx-auto w-20 h-20 md:w-24 md:h-24 rounded-full bg-white/10 flex items-center justify-center mb-6 ring-2 ring-white/30">
        <span class="text-4xl md:text-5xl">ðŸŽ°</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-4">404 â€” Bet Not Found</h1>
      <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto">
        The page youâ€™re looking for has been cashed out or never placed. Try our free tools or latest strategies below.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/" class="inline-flex items-center px-5 py-3 rounded-md bg-white text-gray-900 font-semibold hover:bg-yellow-50">Back to Home</a>
        <a href="/tools/" class="inline-flex items-center px-5 py-3 rounded-md bg-gray-900/30 ring-1 ring-white/40 hover:bg-gray-900/40">Browse Tools</a>
        <a href="/posts/" class="inline-flex items-center px-5 py-3 rounded-md bg-gray-900/30 ring-1 ring-white/40 hover:bg-gray-900/40">Read Posts</a>
      </div>
    </div>
  </section>

  <!-- Suggestions -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Tools -->
        <div>
          <h2 class="text-2xl font-bold mb-2">ðŸ§® Try These Free Betting Tools</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">Instant calculators to plan your next winning strategy.</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {recentTools.map((tool) => (
              <a href={`/tools/${tool.slug.current}/`} class="block p-5 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:shadow-md transition">
                <div class="text-xs uppercase tracking-wide text-emerald-700 dark:text-emerald-300 mb-1">Tool</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">{tool.title}</h3>
                {tool.metaDescription && (
                  <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-3">{tool.metaDescription}</p>
                )}
              </a>
            ))}
          </div>
          <div class="mt-6">
            <a href="/tools/" class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium hover:underline">View all tools â†’</a>
          </div>
        </div>

        <!-- Posts -->
        <div>
          <h2 class="text-2xl font-bold mb-2">ðŸ“š Latest Betting Guides</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">Read step-by-step tutorials and strategy breakdowns.</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {recentPosts.map((post) => (
              <a href={`/${post.slug.current}/`} class="block p-5 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:shadow-md transition">
                <div class="text-xs uppercase tracking-wide text-yellow-700 dark:text-yellow-300 mb-1">Post</div>
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">{post.title}</h3>
                {post.metaDescription && (
                  <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-3">{post.metaDescription}</p>
                )}
              </a>
            ))}
          </div>
          <div class="mt-6">
            <a href="/posts/" class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium hover:underline">View all posts â†’</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  .line-clamp-3 { display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
</style>


